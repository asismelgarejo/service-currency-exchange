{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "typeRoots": ["./src/custom_types", "./node_modules/@types"],
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
